<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itdl_and.facebook.login.OrdinaryNoteActivity"
    android:background="@color/primary_color">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/EditTextNoteContent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:hint="Write a note "
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/buttonAddNote"
        android:background="@color/secondary_color"
        android:layout_below="@+id/radioGroupPriority"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Priority "
        android:id="@+id/textViewpriority"
        android:layout_centerVertical="true"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewpriority"
        android:layout_below="@+id/textViewpriority"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioHigh"
            android:layout_width="110dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="High"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="130dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="Medium"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/radioLow"
            android:layout_width="120dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="Low"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textStyle="bold" />

    </RadioGroup>

</RelativeLayout>
