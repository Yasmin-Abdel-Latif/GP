<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itdl_and.facebook.login.HomeActivity"
    android:orientation="vertical"
    android:background="@color/primary_color">

    <TextView
        android:id="@+id/ShowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:layout_marginBottom="7dp" />



    <Button
        android:id="@+id/UpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/updateProfile"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/SignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SignOut"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />

    <Button
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/btnHistory"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Current notes"
        android:id="@+id/buttonShowCurrentNotes"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show offer recomendation"
        android:id="@+id/buttonShowOfferRecomendation"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show notifications"
        android:id="@+id/buttonShowNotifications"
        android:layout_below="@+id/buttonShowOfferRecomendation"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Note"
        android:id="@+id/buttonAddNote"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Close Store"
        android:id="@+id/buttonShowCloseOffer"
        android:background="@color/secondary_color"
        android:layout_marginBottom="7dp" />
</LinearLayout>
