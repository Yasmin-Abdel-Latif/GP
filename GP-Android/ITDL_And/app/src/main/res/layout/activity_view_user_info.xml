<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itdl_and.facebook.login.ViewUserInfoActivity"
    android:background="@color/primary_color">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextUserName"
        android:layout_alignParentStart="true"
        android:text="@string/UserName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TextUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold"
        android:layout_alignStart="@+id/buttonupdate">

        <requestFocus />
    </EditText>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextpassword"
        android:layout_alignParentStart="true"
        android:text="@string/Email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:minWidth="150dp"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold"
        android:minHeight="40dp"
        android:layout_alignStart="@+id/buttonupdate"
        android:paddingTop="10dp"
        android:paddingLeft="5dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextpassword"
        android:layout_alignParentStart="true"
        android:text="@string/UserPassword"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextmail"
        android:ems="10"
        android:inputType="textPassword"
        android:minWidth="150dp"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold"
        android:layout_alignStart="@+id/buttonupdate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextTwitter"
        android:layout_alignParentStart="true"
        android:text="@string/TwitterAccount"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:minWidth="150dp"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold"
        android:layout_alignStart="@+id/buttonupdate" />


    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:minWidth="150dp"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold"
        android:layout_alignStart="@+id/buttonupdate" />

    <TextView
        android:id="@+id/textViewBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextCity"
        android:layout_below="@+id/editTextCity"
        android:text="Set Birth Date"
        android:background="@color/secondary_color"
        android:layout_alignStart="@+id/buttonupdate" />

    <Button
        android:id="@+id/buttonupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@+id/radioGroupGender"
        android:layout_centerHorizontal="true"
        android:background="@color/secondary_color" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextCity"
        android:layout_alignParentStart="true"
        android:text="@string/City"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnBirthDate"
        android:layout_alignParentStart="true"
        android:text="@string/BirthDate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBirthDate"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/textView4">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="149dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="@string/male"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="149dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="@string/female"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewBirthDate"
        android:text="@string/gender"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textStyle="bold" />


</RelativeLayout>
