<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itdl_and.facebook.login.DeadlineActivity"
    android:background="#1A237E">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etDeadlineTitle"
        android:hint="Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f89939"
        android:textColorHint="#f89939"
        android:textStyle="bold" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Deadline Time"
        android:id="@+id/btnDeadlineTime"
        android:layout_below="@+id/tvdisplayDeadlineDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#f89939" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Deadline Date"
        android:id="@+id/btnDeadlineDate"
        android:layout_below="@+id/etDeadlineTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#f89939" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/tvdisplayDeadlineDate"
        android:layout_below="@+id/btnDeadlineDate"
        android:layout_centerHorizontal="true"
        android:textColor="#f89939"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvdisplayDeadlineTime"
        android:layout_below="@+id/btnDeadlineTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f89939"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Progress in this task "
        android:id="@+id/textView9"
        android:layout_below="@+id/tvdisplayDeadlineTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f89939"
        android:textColorHint="#f89939"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnaddDeadline"
        android:layout_below="@+id/radioGroupPriority"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="#f89939" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Priority "

        android:id="@+id/textViewPrority"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvProgress"
        android:textColor="#f89939"
        android:textColorHint="#f89939"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textViewPrority"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/radioButtonHigh"
            android:layout_width="110dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="High"
            android:textColor="#f89939"
            android:textColorHint="#f89939"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonMedium"
            android:layout_width="130dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="Medium"
            android:textColor="#f89939"
            android:textColorHint="#f89939"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonLow"
            android:layout_width="120dp"
            android:layout_height="59dp"
            android:checked="true"
            android:text="Low"
            android:textColor="#f89939"
            android:textColorHint="#f89939"
            android:textStyle="bold" />
    </RadioGroup>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarProgress"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvProgress"
        android:layout_below="@+id/seekBarProgress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textColor="#f89939"
        android:textColorHint="#f89939"
        android:textStyle="bold" />


</RelativeLayout>
