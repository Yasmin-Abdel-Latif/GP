<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itdl_and.facebook.login.EditDeadlineNoteActivity"
    android:background="#1A237E">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeadlineProgressTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f89939" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Progress in this task "
        android:id="@+id/textView9"
        android:layout_below="@+id/tvDeadlineProgressTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f89939"
        android:textStyle="bold" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarUpdateProgress"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNoteProgress"
        android:layout_below="@+id/seekBarUpdateProgress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:textColor="#f89939" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Update "
        android:id="@+id/btnUpdateDeadlineProgress"
        android:layout_marginLeft="52dp"
        android:layout_below="@+id/tvNoteProgress"
        android:layout_alignParentStart="true"
        android:background="#f89939" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Done "
        android:id="@+id/btnDoneDeadlineNote"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="54dp"
        android:layout_alignTop="@+id/btnUpdateDeadlineProgress"
        android:layout_alignParentEnd="true"
        android:background="#f89939" />

</RelativeLayout>
