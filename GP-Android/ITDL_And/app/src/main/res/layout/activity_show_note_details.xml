<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itdl_and.facebook.login.ShowNoteDetailsActivity"
    android:background="#1A237E">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnNoteDelete"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvNoteDetails"
        android:layout_alignEnd="@+id/tvNoteDetails"
        android:background="#f89939"
        android:minWidth="70dp"
        android:layout_marginLeft="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/btnNoteEdit"
        android:layout_alignTop="@+id/btnNoteDelete"
        android:layout_toLeftOf="@+id/btnNoteDelete"
        android:layout_toStartOf="@+id/btnNoteDelete"
        android:background="#f89939"
        android:minWidth="70dp"
        android:layout_marginLeft="5dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvNoteDetails"
        android:layout_below="@+id/btnNoteDelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#f89939"
        android:textColorHint="#f89939" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/btnDone"
        android:layout_toStartOf="@+id/btnNoteEdit"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tvNoteDetails"
        android:background="#f89939"
        android:minWidth="70dp" />


</RelativeLayout>
